<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PhysicsCalculator.ImpulsePage">
	<ContentPage.Content>
				<Grid>
		<Image Source="Background.9.png" Aspect="AspectFill" />
		<StackLayout Orientation="Vertical" Padding="10" VerticalOptions="FillAndExpand">
		<StackLayout Padding="20" VerticalOptions="FillAndExpand">
			<Label Text="Enter Any Three Values" HorizontalTextAlignment="Center" FontAttributes="Bold" TextColor="White" FontSize="19"/>
		</StackLayout>
			<ScrollView VerticalOptions="FillAndExpand">
		<StackLayout  Padding="25" VerticalOptions="FillAndExpand">
				<Label Text="Impulse" HorizontalTextAlignment="Center" FontSize="18" TextColor="White"/>
					<Entry Text="" x:Name="impulseEntry" Placeholder="Enter in Ns"/>
				<Label Text="Mass" HorizontalTextAlignment="Center" FontSize="18" TextColor="White"/>
					<Entry Text="" x:Name="massEntry" Placeholder="Enter in kg"/>
				<Label Text="Initial Velocity" HorizontalTextAlignment="Center" FontSize="18" TextColor="White"/>
					<Entry Text="" x:Name="iniVelEntry" Placeholder="Enter in m/s"/>
				<Label Text="Final Velocity" HorizontalTextAlignment="Center" FontSize="18" TextColor="White"/>
					<Entry Text="" x:Name="finVelEntry" Placeholder="Enter in m/s"/>
				<Label Text="" x:Name="error"  HorizontalTextAlignment="Center" TextColor="Red"/>
			</StackLayout>
				</ScrollView>
		<StackLayout Padding="10" VerticalOptions="FillAndExpand">
			 <Button Text="Calculate" x:Name="calcButton" TextColor="Purple" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Clicked="Calculate" FontSize="23" FontAttributes="Bold"/>
		</StackLayout>
			</StackLayout>
			</Grid>
	</ContentPage.Content>
</ContentPage>
